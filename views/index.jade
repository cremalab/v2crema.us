        img(src="/images/home/ventures/p-c-mock.png" id="pc-img" data-parallax="true" data-speed="0.3" data-direction="up")
        img(src="/images/home/ventures/hip-hire.png" id="hiphire-img" data-parallax="true" data-speed="0.12" data-direction="up")  


